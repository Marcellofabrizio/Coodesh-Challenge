{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Spaceflight News Articles API",
        "description": "Coodesh Back-End Challenge 2021"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [{
        "name": "Articles",
        "description": "API for the registered articles"
    }],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/articles": {
            "get": {
                "tags": ["Articles"],
                "summary": "Get all articles",
                "parameters": [{
                    "in": "query",
                    "name": "limit",
                    "type": "integer",
                    "default": 30
                }, {
                    "in": "query",
                    "name": "skip",
                    "type": "integer",
                    "default": 0
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            },
            "put" : {
                "tags": ["Articles"],
                "description": "Update an article",
                "parameters": [{
                    "name": "article",
                    "in": "body",
                    "description": "Input Model of updated article",
                    "schema": {
                        "$ref": "#/definitions/Article"
                    }
                }],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Article updated",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            },
            "post": {
                "tags": ["Articles"],
                "description": "Register a new Article",
                "parameters": [{
                    "name": "article",
                    "in": "body",
                    "description": "Article that we want to register",
                    "schema": {
                        "$ref": "#/definitions/Article"
                    }
                }],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Article created",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            }
        },
        "/articles/{id}": {
            "get": {
                "tags": ["Articles"],
                "summary": "Get article by id",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "type": "string",
                    "required": true
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            },
            "delete": {
                "tags": ["Articles"],
                "summary": "Delete an article by id",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "type": "string",
                    "required": true
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/articles/count": {
            "get": {
                "tags": ["Articles"],
                "summary": "Get articles count",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Article": {
            "properties": {
                "id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "featured": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "newsSite": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "publishedAt": {
                    "type": "string"
                },
                "launches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "provider": {
                                "type": "string"
                            }
                        }
                    }
                },
                "events": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "provider": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}